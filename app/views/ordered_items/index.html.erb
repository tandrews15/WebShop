<div class="mt-2 mb-5 pb-5">
  <h1>Ordered Items</h1>

  <% if current_user.admin %>
  <% @users.each do |u| %>

  <%= render :partial => "orders", :locals => {:user_id => u.id} %>
  <% end %>



  <% else %>
  <%= render :partial => "orders", :locals => {:user_id => current_user.id} %>


  <% end %>

  <br>

  <%= link_to 'Back to items', items_path %>

</div>