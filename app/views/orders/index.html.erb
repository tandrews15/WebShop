<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Shipping address</th>
      <th>User notes</th>
      <th>Shipping notes</th>
      <th>Confirmed by admin</th>
      <th>User</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table">
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.shipping_address %></td>
      <td><%= order.user_notes %></td>
      <td><%= order.shipping_notes %></td>
      <td><%= order.confirmed %></td>
      <td><%= order.user_id %></td>
      <td><%= order.payment.name %></td>
      <td><%= link_to 'Show', order, class: "btn btn-outline-success btn-sm" %></td>
      <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-outline-secondary btn-sm" %></td>
      <td><%= link_to 'Destroy', order, method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>